# Environment variables for Football Analytics Platform

# Database Configuration
DATABASE_URL=sqlite:///football_analytics.db
# For production use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/football_analytics

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Football Data APIs
FOOTBALL_DATA_API_KEY=your_football_data_api_key_here
SPORTMONKS_API_KEY=your_sportmonks_api_key_here

# Web Scraping Settings
SCRAPING_DELAY=1  # Delay between requests in seconds
USER_AGENT=FootballAnalytics/1.0

# Model Settings
MODEL_RETRAIN_INTERVAL=7  # Days between model retraining
PREDICTION_CONFIDENCE_THRESHOLD=0.7

# Dashboard Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# API Settings
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
DEBUG=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/football_analytics.log

# MLflow Configuration
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=football_analytics

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24